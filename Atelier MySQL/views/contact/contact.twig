{% extends "../layout.twig" %}

{% block content %}
	<div class='p-8'>
		{% if contact == null %}
			<div>Contact doesn't exist :|
			</div>
		{% else %}
			<div class="  relative overflow-x-auto">
				<h1 class='text-2xl'>Information du contact
					{{id}}</h1>

				<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
					<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
						<tr>
							<th scope="col" class="px-6 py-3">
								Full Name
							</th>
							<th scope="col" class="px-6 py-3">
								Phone
							</th>

						</tr>
					</thead>
					<tbody>

						<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
							<td class="px-6 py-4">
								{{ contact.fullName }}
							</td>
							<td class="px-6 py-4">
								{{ contact.phone }}
							</td>
						</tr>
					</tbody>
				</table>
				<form method='delete' class='mt-5'>
					<input class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" type='submit' value='Delete Contact'/>

				</form>
			</div>
		{% endif %}
	</div>
{% endblock content %}
